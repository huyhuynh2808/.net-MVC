@{
    ViewData["Title"] = "Identify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="full-banner" style="height: 135px">
</div>

<div class="main-content">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="~/Home"><i class="fa fa-home"></i></a></li>
            <li><a>Quên mật khẩu ?</a></li>
        </ul>
        <div class="row login-page">
            <div class="col-sm-6" id="content">
                <div class="row">
                    <div class="well">
                        <h3>Quên mật khẩu ?</h3>
                        @using (Html.BeginForm("Identify", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label for="input-email" class="control-label">E-Mail</label>
                                <input type="text" class="form-control" id="input-email" placeholder="Nhập E-Mail" value="" name="email">
                            </div>
                            <div class="form-group" style="text-align: end;">
                                <input type="submit" class="btn" value="Đổi mật khẩu" style="width:100%; background-color: rgb(30, 113, 247); height: 30px; color: white;">
                                <a href="~/Account/Login">Đăng nhập</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

