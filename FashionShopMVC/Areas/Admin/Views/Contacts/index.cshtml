@using FashionShopMVC.Helper;
@using FashionShopMVC.Models.DTO.ContactDTO;
@using FashionShopMVC.Models.Domain;
@model AdminPaginationSet<ContactDTO>
@{
    ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title" style="font-size:30px">Danh sách liên hệ</h3>
        <div class="row">
            <div class="col col-md-5">
                <div class="input-group mb-3">
                    <input id="searchByPhoneNumber" type="text" class="form-control" placeholder="Nhập số điện thoại..." aria-label="Recipient's title" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" onclick="loadContacts()">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="loading" style="display: none;">
        <img src="~/assets/admin/img/spinner.gif" alt="Đang tải..." />
        <p>Đang tải dữ liệu...</p>
    </div>
    <!-- Khu vực chứa bảng và phân trang -->
    <div id="searchContactResults">
        @await Html.PartialAsync("_ContactSearchResults", Model)
    </div>
</div>
