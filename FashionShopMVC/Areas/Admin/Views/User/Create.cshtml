@model FashionShopMVC.Models.DTO.UserDTO.RegisterRequestDTO

@{
    ViewData["Title"] = "Create User Admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title" style="font-size: 30px">Thêm quản trị viên</h3>
    </div>
    <div>
        <a asp-action="Index">Quay lại</a>
    </div>
    <form asp-action="Create" asp-controller="User" asp-area="Admin" method="post" novalidate>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label">Họ và tên</label>
                <input asp-for="FullName" class="form-control" placeholder="Vui lòng nhập họ và tên" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Vui lòng nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Vui lòng nhập số điện thoại" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Vui lòng nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RePassword" class="control-label">Nhập lại mật khẩu</label>
                <input asp-for="RePassword" class="form-control" type="password" placeholder="Vui lòng nhập lại mật khẩu" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Thêm</button>
            <a class="btn btn-danger" asp-action="Index" asp-controller="User" asp-area="Admin">Hủy</a>
        </div>
    </form>
</div>
<!-- /.card -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    